{
  "name": "js-from-zero-ch5",
  "version": "1.0.0",
  "description": "Ch5 iTunes 検索アプリを作る!",
  "private": true,
  "scripts": {
    "start": "npm run build; npm run watch & npm run server",
    "build": "npm run rsync && rollup -c",
    "rsync": "rsync -avu --exclude '*.tag' --exclude '*.js' src/ dist/",
    "watch": "chokidar 'src/**' -c 'npm run build'",
    "server": "browser-sync start --files 'dist/*' --server dist/"
  },
  "dependencies": {
    "fetch-jsonp": "^1.0.6",
    "moment": "^2.18.1",
    "riot": "^3.3.1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-riot": "^1.1.0"
  },
  "license": "MIT"
}
